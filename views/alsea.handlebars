<div class="alsea">
	{{#if isTrainer}}
		<a class="btn btn-primary btn-lg btn-inicio goto-entrenador-clases" role="button">Finalizar Clase</a>
	{{else}}
		<a href="/cursos" class="btn btn-primary btn-lg btn-inicio" role="button">Cursos</a>
		<a class="btn btn-primary btn-lg btn-inicio not-implemented" role="button">Clases</a>
		<a class="btn btn-primary btn-lg btn-inicio not-implemented" role="button">Aulas</a>
		<a href="/reportes" class="btn btn-primary btn-lg btn-inicio" role="button">Reportes</a>
		<a href="/finalizarClaseAdmin" class="btn btn-primary btn-lg btn-inicio" role="button">Finalizar Clase</a>
		<a href="/modificarCurso" class="btn btn-primary btn-lg btn-inicio" role="button">Modificar Curso</a>
	{{/if}}
</div>


<script type="text/javascript">
	$('.not-implemented').on('click', function(e) {
		alert("Disculpe, esta funcionalidad ser√° implementada en futuras versiones.");
	});

	$('.goto-entrenador-clases').on('click', function(e) {
		var trainer_id = window.location.search.split("&")[0].split("=")[1];
		var url = '/finalizarClase/clases?dni='+trainer_id;
		window.location = url;
	});
</script>
